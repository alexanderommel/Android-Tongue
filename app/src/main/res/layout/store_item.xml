<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:layout_height="200dp"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/store_item_storeImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/kfc_store" />
    <TextView
        android:id="@+id/store_item_storeName"
        android:layout_width="match_parent"
        android:paddingTop="7dp"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="KFC Avenida 6 de Diciembre"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/store_item_shippingRate"
        android:layout_width="match_parent"
        android:paddingTop="2dp"
        android:drawableLeft="@drawable/ic_baseline_directions_car_24"
        android:layout_height="wrap_content"
        android:drawablePadding="7dp"
        android:textSize="15dp"
        android:text="Costo de envio $1.50"
        android:textColor="@color/black"/>


</LinearLayout>